<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewContenedor"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/linearLayoutImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    android:paddingBottom="1dp">
                    <ImageView
                        android:id="@+id/imgViewLugar"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_foto">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <FrameLayout
                android:layout_below="@+id/linearLayoutImagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/linearLayoutNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/txtNombreLugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:textStyle="bold"
                        android:text="Local veronica"
                        android:textSize="18dp"
                        android:paddingBottom="5dp"/>
                    <TextView
                        android:id="@+id/txtDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:paddingStart="20dp"
                        android:text="Calle 54 x 37 y 89"
                        android:paddingBottom="5dp"
                        android:textSize="10dp"/>
                    <TextView
                        android:id="@+id/txtEstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:paddingStart="20dp"
                        android:text="Abierto"
                        android:textSize="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="end">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="#807CFF"
                        app:cardCornerRadius="3dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/txtRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="#FFFFFF">
                            </TextView>
                            <ImageView
                                android:id="@+id/iconCategoria"
                                android:layout_width="16dp"
                                android:src="@drawable/star_24"
                                android:scaleType="centerCrop"
                                android:layout_height="16dp"
                                android:layout_gravity="center">
                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>